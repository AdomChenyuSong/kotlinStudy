<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/md_white_1000">

    <TextView
            android:id="@+id/tv_hotkey_search"
            style="@style/Text.Size16ColorAccent"
            android:layout_marginTop="20dp"
            android:text="大家都在搜"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/layout_hotkey_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="50dp"
            android:padding="@dimen/dp_10"
            app:container_background_color="@color/transparent"
            app:container_border_color="@color/transparent"
            app:container_enable_drag="false"
            app:horizontal_interval="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_hotkey_search"
            app:tag_clickable="true"
            app:tag_max_length="100"
            app:tag_ripple_duration="100"
            app:tag_text_size="14sp"
            app:tag_theme="random"
            app:vertical_interval="16dp" />

    <TextView
            android:id="@+id/tv_user_searchkey"
            style="@style/Text.Size16ColorAccent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="历史搜索"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_hotkey_search" />

    <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/layout_user_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="50dp"
            android:padding="@dimen/dp_10"
            app:container_background_color="@color/transparent"
            app:container_border_color="@color/transparent"
            app:container_enable_drag="false"
            app:horizontal_interval="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_searchkey"
            app:tag_clickable="true"
            app:tag_max_length="100"
            app:tag_ripple_duration="100"
            app:tag_text_size="14sp"
            app:tag_theme="random"
            app:vertical_interval="16dp" />

</android.support.constraint.ConstraintLayout>