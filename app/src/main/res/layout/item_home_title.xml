<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/md_white_1000"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/md_grey_200"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/Text.Size14ColorGray700"
            android:textColor="@color/shape_click_gray_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/img_banner"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="我是名字" />

        <TextView
            android:id="@+id/tv_times"
            style="@style/Text.Size12ColorGray500"
            android:textColor="@color/shape_click_gray_times"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="我是名字" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text.Size14ColorBlack"
            android:textColor="@color/shape_click_gray_title"
            android:gravity="left"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/img_banner"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="我是我是内容我是内容我是内容我是内容我是内容我是内容内容" />

        <TextView
            android:id="@+id/chapterName"
            style="@style/Text.Size12FrameAccent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/img_banner"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="121212121212" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_collection_gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>