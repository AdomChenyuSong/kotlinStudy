<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <include layout="@layout/include_toolbar" app:layout_constraintTop_toTopOf="parent"></include>

    <View
        android:id="@+id/base_devide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/md_grey_300"
        app:layout_constraintTop_toBottomOf="@+id/appbar_layout">
    </View>

    <FrameLayout
        android:layout_marginTop="45dp"
        android:id="@+id/base_toolbar_fl_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/base_devide_line"></FrameLayout>
</android.support.constraint.ConstraintLayout>