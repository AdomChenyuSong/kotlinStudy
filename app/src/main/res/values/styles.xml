<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoactionBar" >
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Text.Size14ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Size18ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text.Size14ColorGray700">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Size12ColorGray500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Size14ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Size14ColorGrey500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Size16ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Size12FrameAccent">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:background">@drawable/shape_click_gray_button</item>
        <item name="android:textColor">@color/shape_click_gray_chapter</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonSize16ColorGray" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>
    <style name="AccentColorButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
